{
  "crons": [
    {"path": "/api/cron/refresh-cache", "schedule": "*/15 * * * *"},
    {"path": "/api/notification-daily-summary", "schedule": "0 10 * * *"}
  ],
  "functions": {
    "api/chat.ts": {"maxDuration": 60},
    "api/tg-webhook.ts": {"maxDuration": 60},
    "api/cron/refresh-cache.ts": {"maxDuration": 300}
  },
  "rewrites": [
    {"source": "/admin", "destination": "/"},
    {"source": "/admin/:path*", "destination": "/"},
    {"source": "/cms", "destination": "/"},
    {"source": "/cms/:path*", "destination": "/"}
  ]
}
